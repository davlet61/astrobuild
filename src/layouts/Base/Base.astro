---
import CookieConsent from '@/components/Astro/CookieConsent.astro';
import type { SeoProps } from '../../components/Astro/BaseHead.astro';
import BaseHead from '../../components/Astro/BaseHead.astro';
import Footer from '../../components/Astro/Footer.astro';
import Navbar from '../../components/Astro/Navbar.astro';
import { buttonVariants } from '../../components/ui/button.tsx';

export interface Props {
  seo?: SeoProps;
}

const { seo } = Astro.props;
---

<!doctype html>
<html lang="nb" class="scroll-smooth">
  <head>
    <BaseHead {...seo} />
  </head>
  <body class="bg-white dark:bg-gray-900 dark:text-gray-300">
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-MXPGLQ5"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->
    <header class="mb-14 md:mb-16">
      <Navbar />
    </header>
    <main>
      <slot />
    </main>
    <Footer />
    <CookieConsent />
  </body>
</html>
