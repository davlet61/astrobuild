---
import PostPreview from '$components/Astro/PostPreview.astro';
import Layout from '$layouts/Page.astro';
import { getAllPages } from '$lib/sanity.client';

const products = (await getAllPages(false)).filter((page) => page.slug !== 'home');

const seo = {
  title: 'Produkter',
  description: 'Vinduer og dører, dusjvegger og dusjdører',
};
---

<Layout seo={seo}>
  <div class="min-h-[calc(100vh-289px)] px-12 py-8">
    <section class="grid gap-12 md:grid-cols-2">
      {products.map((post) => <PostPreview path="produkter" post={post} />)}
    </section>
  </div>
</Layout>
