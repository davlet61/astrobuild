const { slug } = Astro.params;

const result = await client.queries.glassType({ relativePath: `${slug}.md` });
const post  = result.data.glassType as GlassType

const seo = {
  title: post.title,
  description: post?.description || '',
  keywords: post?.seoKeywords  || '',
};
---

<Layout seo={seo}>
  <BlogPost post={post} />
</Layout>
