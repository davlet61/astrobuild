---
import type { SeoProps } from '@/components/Astro/BaseHead.astro';
import BlogPost from '../../components/Astro/BlogPost.astro';
import Layout from '../../layouts/Post.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts
    .filter((post) => !['smijernsdor', 'velux-takvinduer', 'home'].includes(post.slug))
    .map((post) => ({
      params: { slug: post.slug },
      props: { post },
    }));
}

const { post } = Astro.props;

const redirect = post?.data.redirect;
const shouldRedirect = redirect && redirect.discriminant !== 'none';
if (shouldRedirect) {
  return Astro.redirect(`/${redirect.discriminant}/${redirect.value.redirectTo}`, redirect.value.statusCode);
}

const seo: SeoProps = {
  title: post.data.title,
  metaDescription: post.data.metaDescription || '',
  keywords: post.data.seoKeywords || '',
  image: post.data.featuredMedia?.discriminant === 'image' ? post.data.featuredMedia?.value.asset ?? '' : '',
};
---

<Layout seo={seo}>
  <BlogPost post={post} />
</Layout>
