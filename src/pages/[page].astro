if (Astro.params?.page?.includes('favicon')) {
  console.log('redirecting');
}

const result = await client.queries.page({ relativePath: `${Astro.params.page}.md` });
const post  = result.data.page as Page
if (Object.keys(post).length <= 0) {
  return Astro.redirect('/404');
}

const seo = {
  title: post.title,
  description: post?.description || '',
  keywords: post?.seoKeywords || '',
  image: post?.mainImage?.url || '',
};
---

<Layout seo={seo}>
  <BlogPost post={post} />
</Layout>
