---
import Hero from '$components/Hero.astro';
import { Carousel } from '$components/Solid/Carousel';
import Feature from '$components/Feature.astro';
import Layout from '$layouts/Page.astro';
import { getPostBySlug } from '$lib/sanity.client';
import type { Image } from '$lib/sanity.queries';

const images: Array<Image> = (await getPostBySlug('home')).body.filter((b: any) => b._type === 'image');

const seo = {
  title: 'Glass-Service Svendsen og Sønn AS',
  description:
    'Glass-Service Svendsen & Sønn AS har lang erfaring i glassbransjen - helt siden 1889. Vi leverer skreddersydde løsninger til alle hjem, og har høy kvalitet i alle ledd.',
};
---

<Layout seo={seo}>
  <Carousel client:visible images={images} />
  <Feature />
  <Hero />
</Layout>
