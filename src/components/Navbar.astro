---
import { ThemeToggler } from './Solid/Theme';
import { Logo } from './Solid/Logo';
import NavLink from './NavLink.astro';
---

<nav
  class="fixed top-0 left-0 z-20 w-full border-b border-gray-200 bg-white px-4 py-2.5 dark:border-gray-600 dark:bg-gray-900"
>
  <div class="container mx-auto flex flex-wrap items-center justify-between">
    <Logo client:visible />
    <div class="flex md:order-2">
      <a data-turbo-preload href="/booking" class="btn-primary mr-9 hidden md:block">Gratis Befaring</a>
      <ThemeToggler client:only="solid-js" />
      <button
        data-collapse-toggle="navbar-sticky"
        type="button"
        class="inline-flex items-center rounded-lg p-2 text-sm text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600 md:hidden"
        aria-controls="navbar-sticky"
        aria-expanded="false"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="h-6 w-6"
          aria-hidden="true"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            fill-rule="evenodd"
            d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
            clip-rule="evenodd"></path>
        </svg>
      </button>
    </div>
    <div class="hidden w-full items-center justify-between md:order-1 md:flex md:w-auto" id="navbar-sticky">
      <ul
        class="relative z-0 mt-4 flex flex-col rounded-lg border border-gray-100 bg-gray-50 p-4 dark:border-gray-700 dark:bg-gray-800 md:mt-0 md:flex-row md:space-x-8 md:border-0 md:bg-white md:text-sm md:font-medium md:dark:bg-gray-900"
      >
        <li class="peer/smijern">
          <!-- <a
            data-turbo-preload
            href="/smijernsdor"
            class="block rounded py-2 pr-4 pl-3 text-gray-700 hover:bg-gray-100 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white md:p-0 md:hover:bg-transparent md:hover:text-primary-700 md:dark:hover:bg-transparent md:dark:hover:text-white"
            aria-current="page">Smijernsdør</a
          > -->
          <NavLink
            href="/smijernsdor"
            class="block rounded py-2 pr-4 pl-3 hover:bg-gray-100 dark:border-gray-700 dark:hover:bg-gray-700 dark:hover:text-white md:p-0 md:hover:bg-transparent md:hover:text-primary-700 md:dark:hover:bg-transparent md:dark:hover:text-white"
          >
            Smijernsdør
          </NavLink>
        </li>

        <li class="peer/velux">
          <!-- <a
            data-turbo-preload
            href="/velux-takvinduer"
            class="block rounded py-2 pr-4 pl-3 text-gray-700 hover:bg-gray-100 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white md:p-0 md:hover:bg-transparent md:hover:text-primary-700 md:dark:hover:bg-transparent md:dark:hover:text-white"
            >Velux</a
          > -->
          <NavLink
            href="/velux-takvinduer"
            class="block rounded py-2 pr-4 pl-3 hover:bg-gray-100 dark:border-gray-700 dark:hover:bg-gray-700 dark:hover:text-white md:p-0 md:hover:bg-transparent md:hover:text-primary-700 md:dark:hover:bg-transparent md:dark:hover:text-white"
          >
            Velux
          </NavLink>
        </li>
        <li class="peer/about">
          <!-- <a
            data-turbo-preload
            href="#"
            class="block rounded py-2 pr-4 pl-3 text-gray-700 hover:bg-gray-100 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white md:p-0 md:hover:bg-transparent md:hover:text-primary-700 md:dark:hover:bg-transparent md:dark:hover:text-white"
            >Om Oss</a
          > -->
          <NavLink
            href="/om-oss"
            class="block rounded py-2 pr-4 pl-3 hover:bg-gray-100 dark:border-gray-700 dark:hover:bg-gray-700 dark:hover:text-white md:p-0 md:hover:bg-transparent md:hover:text-primary-700 md:dark:hover:bg-transparent md:dark:hover:text-white"
          >
            Om Oss
          </NavLink>
        </li>
        <li class="peer/contact">
          <!-- <a
            data-turbo-preload
            href="/contact"
            class="block rounded py-2 pr-4 pl-3 text-gray-700 hover:bg-gray-100 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white md:p-0 md:hover:bg-transparent md:hover:text-primary-700 md:dark:hover:bg-transparent md:dark:hover:text-white"
            >Kontakt</a
          > -->
          <NavLink
            href="/kontakt-oss"
            class="block rounded py-2 pr-4 pl-3 hover:bg-gray-100 dark:border-gray-700 dark:hover:bg-gray-700 dark:hover:text-white md:p-0 md:hover:bg-transparent md:hover:text-primary-700 md:dark:hover:bg-transparent md:dark:hover:text-white"
          >
            Kontakt Oss
          </NavLink>
        </li>

        <!-- <span
          class={classNames(
            'absolute bottom-3 -z-10 h-6 w-[29%] origin-center scale-x-110 scale-y-125 rounded-full border bg-gray-200 ring-gray-400 transition-all duration-300 dark:bg-transparent dark:ring-white peer-focus-within/velux:left-[40%] peer-focus-within/contact:left-[65%]',
            pathname === '/' && 'hidden',
            pathname === '/smijernsdor' && '-left-7',
            pathname === '/velux-vinduer' && 'left-[25%]',
            pathname === '/contact' && 'left-[65%]',
            pathname === '/om-oss' && 'left-[40%]',
          )}></span> -->
      </ul>
    </div>
  </div>
</nav>
