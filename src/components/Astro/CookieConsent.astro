---
import { buttonVariants } from '../ui/button';

const linkClasses = buttonVariants({ variant: 'link' });
---

<script type="module" is:inline define:vars={{ linkClasses }}>
  import 'https://cdn.jsdelivr.net/gh/orestbida/cookieconsent@3.0.1/dist/cookieconsent.umd.js';

  CookieConsent.run({
    guiOptions: {
      consentModal: {
        layout: 'box',
        position: 'bottom right',
        flipButtons: false,
        equalWeightButtons: true,
      },
      preferencesModal: {
        layout: 'box',
        position: 'left right',
        flipButtons: false,
        equalWeightButtons: true,
      },
    },
    categories: {
      necessary: {
        enabled: true,
        readOnly: true,
      },
      analytics: {
        autoClear: {
          cookies: [{ name: /^(_ga|_gid|_gat|_gac|_dc_gtm_)/ }],
        },
        services: {
          ga: {
            label: 'Google Analytics',
            onAccept: () => {
              // Update consent for analytics
              if (window.gtag) {
                window.gtag('consent', 'update', {
                  analytics_storage: 'granted',
                  // ad_user_data: 'granted',
                  // ad_personalization: 'granted',
                });
              }
            },
            onReject: () => {
              // Clear analytics cookies
              const cookies = ['_ga', '_gid', '_gat', '_gac'];
              cookies.forEach((cookie) => {
                document.cookie = `${cookie}=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;`;
                document.cookie = `${cookie}=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/; domain=.${location.hostname};`;
              });

              // Update consent state
              if (window.gtag) {
                window.gtag('consent', 'update', {
                  analytics_storage: 'denied',
                  // ad_user_data: 'denied',
                  // ad_personalization: 'denied',
                });
              }
            },
          },
        },
      },
      ads: {
        autoClear: {
          cookies: [{ name: /^(_gcl|_gads|__gads|_gac|AID|TAID|IDE|ANID)/ }],
        },
        services: {
          adsense: {
            label: 'Google Ads',
            onAccept: () => {
              // Update consent for ads
              if (window.gtag) {
                window.gtag('consent', 'update', {
                  ad_storage: 'granted',
                  ad_user_data: 'granted',
                  ad_personalization: 'granted',
                });
              }
            },
            onReject: () => {
              // Clear advertising cookies
              const adCookies = ['_gcl', '_gads', '__gads', '_gac', 'AID', 'TAID', 'IDE', 'ANID'];
              adCookies.forEach((cookie) => {
                document.cookie = `${cookie}=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;`;
                document.cookie = `${cookie}=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/; domain=.${location.hostname};`;
                document.cookie = `${cookie}=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/; domain=.doubleclick.net;`;
              });

              // Update consent state
              if (window.gtag) {
                window.gtag('consent', 'update', {
                  ad_storage: 'denied',
                  ad_user_data: 'denied',
                  ad_personalization: 'denied',
                });
              }
            },
          },
        },
      },
    },
    language: {
      default: 'no',
      translations: {
        no: {
          consentModal: {
            title: 'Vi bruker informasjonskapsler!',
            description:
              'Hei, dette nettstedet bruker n칮dvendige informasjonskapsler for 친 sikre riktig drift og sporing av informasjonskapsler for 친 forst친 hvordan du samhandler med det. Sistnevnte vil kun bli satt etter samtykke. <button type="button" data-cc="c-settings" class="cc-link">Instillinger</button>',
            acceptAllBtn: 'Godta alle',
            acceptNecessaryBtn: 'Avvis alle',
            showPreferencesBtn: 'Innstillinger for informasjonskapsler',
            footer: `<a href="/personvern" class={${linkClasses}} target="_blank">Personvern</a>`,
          },
          preferencesModal: {
            title: 'Innstillinger for informasjonskapsler',
            savePreferencesBtn: 'Lagre innstillinger',
            acceptAllBtn: 'Godta alle',
            acceptNecessaryBtn: 'Avvis alle',
            closeIconLabel: 'Lukk',
            sections: [
              {
                title: 'Bruk av informasjonskapsler 游닉',
                description: `Vi bruker informasjonskapsler for 친 sikre de grunnleggende funksjonene p친 nettstedet og forbedre din online opplevelse. Du kan velge for hver kategori om du vil delta eller ikke n친r som helst. For flere detaljer relatert til informasjonskapsler og annen sensitiv data, vennligst les fullstendig <a href="/personvern" class={${linkClasses}}>Personvern</a>.`,
              },
              {
                title: 'Strengt n칮dvendige informasjonskapsler',
                description:
                  'Disse informasjonskapslene er essensielle for riktig funksjon av mitt nettsted. Uten disse informasjonskapslene ville nettstedet ikke fungere ordentlig',
                linkedCategory: 'necessary',
              },
              {
                title: 'Ytelse og analyse-informasjonskapsler',
                description: 'Disse informasjonskapslene lar nettstedet huske valgene du har gjort tidligere',
                linkedCategory: 'analytics',
                cookieTable: {
                  caption: 'Informasjonskapsler',
                  headers: {
                    name: 'Navn',
                    domain: 'Domene',
                    desc: 'Beskrivelse',
                  },
                  body: [
                    {
                      name: '_ga',
                      domain: location.hostname,
                      desc: 'Google Analytics: Brukes til 친 skille brukere.',
                    },
                    {
                      name: '_gid',
                      domain: location.hostname,
                      desc: 'Google Analytics: Brukes til 친 skille brukere.',
                    },
                    {
                      name: '_gat',
                      domain: location.hostname,
                      desc: 'Google Analytics: Brukes til 친 begrense antall foresp칮rsler.',
                    },
                    {
                      name: '_gac',
                      domain: location.hostname,
                      desc: 'Google Analytics: Inneholder kampanjerelatert informasjon.',
                    },
                  ],
                },
              },
              {
                title: 'Annonse-informasjonskapsler',
                description:
                  'Disse informasjonskapslene brukes til 친 vise relevante annonser og spore annonsevisninger',
                linkedCategory: 'ads',
                cookieTable: {
                  headers: {
                    name: 'Navn',
                    domain: 'Domene',
                    desc: 'Beskrivelse',
                  },
                  body: [
                    {
                      name: '_gcl',
                      domain: location.hostname,
                      desc: 'Google Ads: Brukes til 친 spore konverteringer.',
                    },
                    {
                      name: '_gads',
                      domain: location.hostname,
                      desc: 'Google Ads: Brukes til annonsem친ling.',
                    },
                    {
                      name: 'IDE',
                      domain: 'doubleclick.net',
                      desc: 'Brukes til 친 vise relevante annonser.',
                    },
                  ],
                },
              },
              {
                title: 'Mer informasjon',
                description:
                  'For sp칮rsm친l ang친ende v친r informasjonskapselpolicy og dine valg, vennligst <a class="cc-link" href="/kontakt">kontakt oss</a>.',
              },
            ],
          },
        },
      },
    },
  });
</script>

