---
import type { Post } from '$tina/__generated__/types';
import { Image } from 'astro:assets';

export interface Props {
  post: Post;
  path: string;
}

const { post, path } = Astro.props;
---

<article class="pt-8">
  <div class="mb-5">
    <h3 class="mb-3 text-3xl leading-snug">
      <a href={`/${path}/${post.slug}`}>
        {
          post.mainImage?.url && (
            <Image
              width={720}
              height={420}
              alt={post.mainImage.alt || ''}
              loading="lazy"
              src={post.mainImage.url}
            />
          )
        }
        {post.title}
      </a>
    </h3>
    {post.description && <p class="mb-4 text-lg leading-relaxed">{post.description}</p>}
  </div>
</article>
