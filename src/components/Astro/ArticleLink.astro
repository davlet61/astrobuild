---
import { Image } from 'astro:assets';

type Props = {
  href: string;
};

const { href } = Astro.props;
const text = await Astro.slots.render('default');

const isImage = href.includes('.png') || href.includes('.jpg');
---

<!-- <img src={href} alt={text} class="rounded-md shadow" /> -->{
  isImage ? <Image alt={text} class="rounded-md shadow" src={href} inferSize /> : <a href={href} set:html={text} />
}
