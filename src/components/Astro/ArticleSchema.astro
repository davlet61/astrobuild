---
import settings from '../../data/settings';

const { title, permalink, publishDate, ogImageUrl, description } = Astro.props;

const ldData = {
  '@context': 'https://schema.org',
  '@type': 'Article',
  publisher: {
    '@type': 'Organization',
    name: `${settings.name} Artikler`,
    url: `${settings.url}/artikler/`,
  },
  author: {
    '@type': 'Person',
    name: `${settings.name}`,
    image: {
      '@type': 'ImageObject',
      url: `${settings.url}/favicon.svg`,
      width: 512,
      height: 512,
    },
    url: 'https://www.example.com/about/',
    sameAs: [`${settings.url}`, `${settings.facebookURL}`, `${settings.twitterURL}`, `${settings.instagramURL}`],
  },
  headline: `${title}`,
  url: `${permalink}`,
  datePublished: `${publishDate}`,
  image: {
    '@type': 'ImageObject',
    url: `${ogImageUrl}`,
    width: 1200,
  },
  description: `${description}`,
  mainEntityOfPage: {
    '@type': 'WebPage',
    '@id': `${settings.url}/artikler/`,
  },
};
---

<script type="application/ld+json" set:html={JSON.stringify(ldData)} />
